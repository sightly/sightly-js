{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ]
  },
  "exclude": [
    "dist",
    "test",
    "scripts",
    "docs",
    "node_modules"
  ]
}
